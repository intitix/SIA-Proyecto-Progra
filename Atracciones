public class Atracciones {
  private String nombreAtraccion;
  private int capacidad;


  //Constructores
  public Atracciones(String nombreAtraccion, int capacidad) {
    this.nombreAtraccion = nombreAtraccion;
    this.capacidad = capacidad;
  }

  //Getters
  public String getNombreAtraccion() {
    return nombreAtraccion;
  }
  public int getCapacidad() {
    return capacidad;
  }


  //Setters
  
  public void setNombreAtraccion(String nombreAtraccion) {
    this.nombreAtraccion = nombreAtraccion;
  }

  public void setCapacidad(int capacidad) {
    this.capacidad = capacidad;
  }


  // Sobrecarga de m√©todos
    public void mostrarAtraccion() {
        System.out.println("Nombre: [" + nombreAtraccion + "] Capacidad: [" + capacidad + " personas]");
    }

    public void mostrarAtraccion(boolean mostrarCapacidad) {
        if (mostrarCapacidad) {
            mostrarAtraccion();
        } else {
            System.out.println("Nombre: [" + nombreAtraccion + "]");
        }
    }
}
