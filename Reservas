import java.text.SimpleDateFormat;
import java.util.Date;

public class Reserva {
    private int grupoPersonas;
    private Atraccion atraccion;
    private Date fechaHora;

    // Constructor
    public Reserva(int grupoPersonas, Atracciones atraccion, Date fechaHora) {
        this.grupoPersonas = grupoPersonas;
        this.atraccion = atraccion;
        this.fechaHora = fechaHora;
    }

    // Getters
    public int getGrupoPersonas() {
        return grupoPersonas;
    }

    public Atracciones getAtraccion() {
        return atraccion;
    }

    public Date getFechaHora() {
        return fechaHora;
    }

    // Setters
    public void setGrupoPersonas(int grupoPersonas) {
        if (grupoPersonas > 0) {
            this.grupoPersonas = grupoPersonas;
        } else {
            throw new IllegalArgumentException("El grupo de personas debe ser mayor a 0.");
        }
    }

    public void setAtraccion(Atracciones atraccion) {
        this.atraccion = atraccion;
    }

    public void setFechaHora(Date fechaHora) {
        this.fechaHora = fechaHora;
    }

    // Mostrar reserva
    public void mostrarReserva() {
        SimpleDateFormat sdf = new SimpleDateFormat("dd-MM-yyyy HH:mm");
        System.out.println("Grupo de personas: " + grupoPersonas + ", Atracci√≥n: " + atraccion.getNombreAtraccion() + ", Fecha y hora: " + sdf.format(fechaHora));
    }
}
