import java.util.Date;

public class Reserva {
    private int grupoPersonas;
    private Atracciones atraccionElegida;
    private Date fechaHora;

    // Constructor
    public Reserva(int grupoPersonas, Atracciones atraccionElegida, Date fechaHora) {
        this.grupoPersonas = grupoPersonas;
        this.atraccionElegida = atraccionElegida;
        this.fechaHora = fechaHora;
    }

    // Getters
    public int getGrupoPersonas() {
        return grupoPersonas;
    }

    public Atracciones getAtraccionElegida() {
        return atraccionElegida;
    }

    public Date getFechaHora() {
        return fechaHora;
    }

    // Setters
    public void setGrupoPersonas(int grupoPersonas) {
        this.grupoPersonas = grupoPersonas;
    }

    public void setAtraccionElegida(Atracciones atraccionElegida) {
        this.atraccionElegida = atraccionElegida;
    }

    public void setFechaHora(Date fechaHora) {
        this.fechaHora = fechaHora;
    }

    // Método para mostrar la información de la reserva
    public void mostrarReserva() {
        System.out.println("Reserva para " + grupoPersonas + " personas en la atracción " + atraccionElegida.getNombreAtraccion() + " el " + fechaHora);
    }
}    
